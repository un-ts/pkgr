{
  "name": "@unts/pkgr",
  "version": "0.0.0",
  "type": "module",
  "description": "Simple but incredible utilities for package bundlers like rollup",
  "repository": "https://github.com/un-ts/pkgr.git",
  "homepage": "https://pkgr.vercel.app",
  "author": "JounQin <admin@1stg.me> (https://www.1stG.me)",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.9.1",
  "scripts": {
    "build": "run-s build:ts build:r",
    "build:r": "yarn r -f cjs -d false -e named --esbuild '{target:es2022}'",
    "build:ts": "tsc -b",
    "clean": "rimraf -g .type-coverage coverage dist '.*cache' 'packages/*/{lib,*.tsbuildinfo}'",
    "docs": "vite",
    "docs:build": "vite build",
    "format": "prettier --write .",
    "lint": "run-p 'lint:*'",
    "lint:es": "eslint . --cache",
    "lint:tsc": "tsc --noEmit",
    "prepare": "simple-git-hooks && yarn-berry-deduplicate || exit 0",
    "r": "tsx packages/rollup/src/cli.ts",
    "release": "changeset publish",
    "test": "vitest run",
    "typecov": "type-coverage",
    "version": "changeset version && yarn --no-immutable"
  },
  "devDependencies": {
    "@1stg/common-config": "^14.3.0",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@mdx-js/rollup": "^3.1.0",
    "@shikijs/rehype": "^3.8.1",
    "@swc/core": "^1.13.0",
    "@types/cross-spawn": "^6.0.6",
    "@types/debug": "^4.1.12",
    "@types/imagemin": "^9.0.1",
    "@types/is-glob": "^4.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.16.5",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/web": "^0.0.250",
    "@vercel/analytics": "^1.5.0",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitejs/plugin-vue-jsx": "^5.0.1",
    "@vitest/coverage-istanbul": "^3.2.4",
    "eslint": "^9.31.0",
    "github-markdown-css": "^5.8.1",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.0",
    "rehype-slug": "^6.0.0",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.13.0",
    "tsx": "^4.20.3",
    "type-coverage": "^2.29.7",
    "typescript": "^5.8.3",
    "unplugin-auto-import": "^19.3.0",
    "vite": "^7.0.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vue": "^3.5.17",
    "yarn-berry-deduplicate": "^6.1.3"
  },
  "resolutions": {
    "prettier": "^3.5.3"
  },
  "commitlint": {
    "extends": [
      "@1stg"
    ]
  },
  "prettier": "@1stg/prettier-config",
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreNonNullAssertion": true,
    "ignoreCatch": true,
    "ignoreFiles": [
      "*.d.ts"
    ],
    "ignoreNested": true,
    "strict": true,
    "update": true
  }
}
